<h1>HELLO WORLD</h1>
<%= form_for @card, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :current, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :current, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">

    <div class="controls">
      <%= f.text_field :author, :class => 'number_field' %>
    </div>
  </div>
  

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                stacks_path, :class => 'btn' %>
  </div>
<% end %>